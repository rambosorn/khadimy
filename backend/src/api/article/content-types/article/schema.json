{
    "kind": "collectionType",
    "collectionName": "articles",
    "info": {
        "singularName": "article",
        "pluralName": "articles",
        "displayName": "Article",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "title"
        },
        "category": {
            "type": "string"
        },
        "publish_date": {
            "type": "date"
        },
        "content": {
            "type": "richtext"
        },
        "excerpt": {
            "type": "text"
        },
        "external_link": {
            "type": "string"
        },
        "cover": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "topics": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::topic.topic",
            "inversedBy": "articles"
        }
    }
}