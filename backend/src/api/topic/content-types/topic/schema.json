{
    "kind": "collectionType",
    "collectionName": "topics",
    "info": {
        "singularName": "topic",
        "pluralName": "topics",
        "displayName": "Topic",
        "description": "Topics for categorizing articles"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "unique": true
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "articles": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::article.article",
            "inversedBy": "topics"
        }
    }
}